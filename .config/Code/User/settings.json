{
	/**
    * Better Defaults
    **/
	"editor.copyWithSyntaxHighlighting": false,
	"editor.emptySelectionClipboard": false,
	"workbench.editor.enablePreview": false,
	"window.newWindowDimensions": "inherit",
	"editor.multiCursorModifier": "ctrlCmd",
	"files.trimTrailingWhitespace": true,
	"diffEditor.renderSideBySide": false,
	"editor.snippetSuggestions": "bottom",
	"editor.detectIndentation": true,
	"editor.tabSize": 2,
	"editor.indentSize": 2,
	"editor.insertSpaces": false,
	"files.insertFinalNewline": true,
	"files.trimFinalNewlines": true,
	"files.eol": "\n",
	"update.showReleaseNotes": false,
	"explorer.compactFolders": false,
	/**
   * Hide Everything
   */
	"workbench.activityBar.location": "hidden",
	"workbench.sideBar.location": "right",
	"workbench.editor.labelFormat": "short",
	"workbench.editor.showTabs": "multiple",
	"editor.guides.indentation": false,
	"editor.minimap.enabled": false,
	"editor.lineNumbers": "relative",
	"editor.scrollbar.vertical": "hidden",
	"editor.renderWhitespace": "none",
	/**
   * Silence The Noise
   */
	"breadcrumbs.enabled": false,
	"scm.diffDecorations": "none",
	"editor.hover.enabled": false,
	"editor.matchBrackets": "never",
	"workbench.tips.enabled": false,
	"editor.colorDecorators": false,
	"git.decorations.enabled": false,
	"workbench.startupEditor": "none",
	"editor.lightbulb.enabled": "off",
	"editor.selectionHighlight": false,
	"editor.overviewRulerBorder": false,
	"editor.renderLineHighlight": "none",
	"editor.occurrencesHighlight": "off",
	"problems.decorations.enabled": false,
	"editor.renderControlCharacters": false,
	"editor.hideCursorInOverviewRuler": true,
	"editor.gotoLocation.multipleReferences": "goto",
	"editor.gotoLocation.multipleDefinitions": "goto",
	"editor.gotoLocation.multipleDeclarations": "goto",
	"workbench.editor.enablePreviewFromQuickOpen": false,
	"editor.gotoLocation.multipleImplementations": "goto",
	"editor.gotoLocation.multipleTypeDefinitions": "goto",
	"editor.cursorBlinking": "solid",
	"editor.fontFamily": "Liberation Mono",
	"editor.fontSize": 14,
	"editor.fontWeight": "400",
	"editor.suggestFontSize": 13,
	"editor.smoothScrolling": true,
	"terminal.integrated.fontSize": 13,
	"window.zoomLevel": 1,
	"window.titleBarStyle": "custom",
	"window.menuBarVisibility": "hidden",
	"editor.bracketPairColorization.enabled": true,
	"editor.guides.bracketPairs": "active",
	"workbench.tree.renderIndentGuides": "always",
	/**
   * Code
   **/
	// Include "-" in word selection.
	"editor.wordSeparators": "`~!@#%^&*()=+[{]}\\|;:'\",.<>/?",
	"emmet.includeLanguages": {
		"blade": "html",
		"vue-html": "html",
		"vue": "html"
	},
	/**
		* Language Specific
		**/
	// PHP
	"php.suggest.basic": false,
	"files.associations": {
		".php_cs": "php",
		".php_cs.dist": "php",
		"*.css": "scss"
	},
	// YAML
	"redhat.telemetry.enabled": false,
	// JS/TS/JSON
	"typescript.tsserver.log": "off",
	"typescript.updateImportsOnFileMove.enabled": "always",
	"html.autoClosingTags": true,
	"javascript.autoClosingTags": true,
	"typescript.autoClosingTags": true,
	"[javascriptreact]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	// Scala
	"files.watcherExclude": {
		"**/.bloop": true,
		"**/.metals": true,
		"**/.ammonite": true
	},
	// C#
	"dotnet.codeLens.enableReferencesCodeLens": false,
	"[csharp]": {
		"editor.maxTokenizationLineLength": 2500,
		"editor.formatOnSave": true
	},
	/**
		* Extension specifics
		**/
	"extensions.ignoreRecommendations": true,
	/**
	  * biome
	  **/
	"biome.searchInPath": true,
	/**
	  * VIM
	  **/
	"vim.easymotion": true,
	"vim.incsearch": true,
	"vim.useSystemClipboard": true,
	"vim.useCtrlKeys": true,
	"vim.enableNeovim": true,
	"vim.neovimUseConfigFile": false,
	"vim.neovimPath": "C:\\Users\\E03027\\scoop\\shims\\nvim.exe",
	"vim.leader": " ",
	"vim.normalModeKeyBindingsNonRecursive": [
		{
			"before": ["<leader>", "<leader>"],
			"commands": ["workbench.action.showCommands"]
		},
		{
			"before": ["<leader>", "b", "d"],
			"commands": ["workbench.action.closeActiveEditor"]
		},
		{
			"before": ["<leader>", "b", "o"],
			"commands": ["workbench.action.closeOtherEditors"]
		},
		{
			"before": ["<leader>", "b", "f"],
			"commands": ["editor.action.formatDocument"]
		},
		{
			"before": ["<leader>", "s", "f"],
			"commands": ["workbench.action.quickOpen"]
		},
		{
			"before": ["<leader>", "f"],
			"commands": [
				{
					"command": "workbench.action.quickOpen",
					"args": "edt "
				}
			]
		},
		{
			"before": ["<S-k>"],
			"commands": ["editor.action.showHover"]
		},
		{
			"before": ["<leader>", "x", "e"],
			"commands": ["workbench.view.explorer"]
		},
		{
			"before": ["<leader>", "x", "g"],
			"commands": ["workbench.view.scm"]
		},
		{
			"before": ["<leader>", "x", "x"],
			"commands": ["workbench.view.extensions"]
		},
		{
			"before": ["]", "d"],
			"commands": ["editor.action.marker.nextInFiles"]
		},
		{
			"before": ["[", "d"],
			"commands": ["editor.action.marker.prevInFiles"]
		}
	],
	"vim.handleKeys": {
		"<C-d>": false,
		"<C-s>": true,
		"<C-z>": false,
		"<C-k>": true,
		"<C-n>": false
	},
	"extensions.experimental.affinity": {
		"vscodevim.vim": 1
	},

	// Settings sync
	"settingsSync.ignoredSettings": [
		"workbench.preferredDarkColorTheme",
		"workbench.colorTheme",
		"editor.fontFamily",
		"editor.fontSize",
		"editor.fontWeight",
		"editor.fontLigatures",
		"editor.lineHeight",
		"-vim.neovimPath"
	],
	"settingsSync.ignoredExtensions": [
		"ms-dotnettools.csdevkit",
		"ocamllabs.ocaml-platform",
		"denoland.vscode-deno",
		"scalameta.metals",
		"scala-lang.scala",
		"chenglou92.rescript-vscode"
	],
	"workbench.colorTheme": "Melange Redux: Dark",
}
