{
	/**
    * Better Defaults
    **/
	"editor.copyWithSyntaxHighlighting": false,
	"editor.emptySelectionClipboard": false,
	"workbench.editor.enablePreview": false,
	"window.newWindowDimensions": "inherit",
	"editor.multiCursorModifier": "ctrlCmd",
	"files.trimTrailingWhitespace": true,
	"diffEditor.renderSideBySide": false,
	"editor.snippetSuggestions": "bottom",
	"editor.detectIndentation": true,
	"editor.tabSize": 2,
	"editor.indentSize": 2,
	"editor.insertSpaces": false,
	"files.insertFinalNewline": true,
	"files.trimFinalNewlines": true,
	/**
   * Hide Everything
   */
	"workbench.activityBar.location": "hidden",
	"workbench.sideBar.location": "right",
	"workbench.statusBar.visible": true,
	"workbench.editor.showTabs": "single",
	"editor.guides.indentation": false,
	"editor.minimap.enabled": false,
	"editor.lineNumbers": "on",
	"editor.scrollbar.vertical": "hidden",
	/**
   * Silence The Noise
   */
	"breadcrumbs.enabled": false,
	"scm.diffDecorations": "none",
	"editor.hover.enabled": false,
	"editor.matchBrackets": "never",
	"workbench.tips.enabled": false,
	"editor.colorDecorators": false,
	"git.decorations.enabled": false,
	"workbench.startupEditor": "none",
	"editor.lightbulb.enabled": "off",
	"editor.selectionHighlight": false,
	"editor.overviewRulerBorder": false,
	"editor.renderLineHighlight": "none",
	"editor.occurrencesHighlight": "off",
	"problems.decorations.enabled": false,
	"editor.renderControlCharacters": false,
	"editor.hideCursorInOverviewRuler": true,
	"editor.gotoLocation.multipleReferences": "goto",
	"editor.gotoLocation.multipleDefinitions": "goto",
	"editor.gotoLocation.multipleDeclarations": "goto",
	"workbench.editor.enablePreviewFromQuickOpen": false,
	"editor.gotoLocation.multipleImplementations": "goto",
	"editor.gotoLocation.multipleTypeDefinitions": "goto",
	"window.autoDetectColorScheme": true,
	"workbench.preferredDarkColorTheme": "Tokyo Night",
	"workbench.preferredLightColorTheme": "Tokyo Night Light",
	"editor.tokenColorCustomizations": {
		"[Tokyo Night]": { // or "[Tokyo Night Storm]"
			"textMateRules": [
				{
					"scope": "comment",
					"settings": {
						"fontStyle": ""
					}
				},
				{
					"scope": [
						"entity.name.type",
						"meta.var.expr storage.type",
						"keyword.control",
						"meta.directive.vue punctuation.separator.key-value.html",
						"meta.directive.vue entity.other.attribute-name.html",
						"tag.decorator.js entity.name.tag.js",
						"tag.decorator.js punctuation.definition.tag.js",
						"storage.modifier"
					],
					"settings": {
						"fontStyle": "bold"
					}
				}
			]
		},
		"[Tokyo Night Light]": { // or "[Tokyo Night Storm]"
			"textMateRules": [
				{
					"scope": "comment",
					"settings": {
						"fontStyle": ""
					}
				},
				{
					"scope": [
						"meta.var.expr storage.type",
						"keyword.control",
						"meta.directive.vue punctuation.separator.key-value.html",
						"meta.directive.vue entity.other.attribute-name.html",
						"tag.decorator.js entity.name.tag.js",
						"tag.decorator.js punctuation.definition.tag.js",
						"storage.modifier",
						"entity.name.type"
					],
					"settings": {
						"fontStyle": "bold"
					}
				},
			]
		}
	},
	"workbench.iconTheme": "vscode-icons",
	"editor.cursorBlinking": "solid",
	"editor.fontFamily": "'Leo Serene', monospace",
	"editor.fontWeight": "400",
	"editor.fontSize": 13,
	"editor.lineHeight": 2,
	"editor.suggestFontSize": 13,
	"editor.suggestLineHeight": 28,
	"terminal.integrated.fontSize": 13,
	"terminal.integrated.lineHeight": 1.5,
	"window.zoomLevel": 1,
	"window.titleBarStyle": "custom",
	"window.menuBarVisibility": "hidden",
	"settingsSync.ignoredExtensions": [
		"antfu.unocss",
		"anhsirk0.ef-themes"
	],
	/**
   * Code
   **/
	// Include "-" in word selection.
	"editor.wordSeparators": "`~!@#%^&*()=+[{]}\\|;:'\",.<>/?",
	"emmet.includeLanguages": {
		"blade": "html",
		"vue-html": "html",
		"vue": "html"
	},
	/**
		* Language Specific
		**/
	// PHP
	"php.suggest.basic": false,
	"files.associations": {
		".php_cs": "php",
		".php_cs.dist": "php",
		"*.css": "scss"
	},
	// YAML
	"redhat.telemetry.enabled": false,
	// JS/TS/JSON
	"typescript.tsserver.log": "off",
	/**
		* Extension specifics
		**/
	/**
	 	* amVim
		**/
	"amVim.useSystemClipboard": true,
	"amVim.bindCtrlCommands": true,
	/**
		* Prettier
		**/
	"prettier.requireConfig": true,
	"prettier.useEditorConfig": false,
	/**
		* VS Code Icons
		**/
	"files.eol": "\n",
	"typescript.updateImportsOnFileMove.enabled": "always",
	"update.showReleaseNotes": false,
	"workbench.colorTheme": "Tokyo Night",
}
