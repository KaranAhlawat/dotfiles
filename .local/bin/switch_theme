#!/usr/bin/env bash

case $1 in
  light)
    sed -i 's/github_dark/github_light/' $XDG_CONFIG_HOME/foot/foot.ini
    sed -i 's/fg=#e6edf3/fg=#1f2328/' $XDG_CONFIG_HOME/tmux/tmux.conf
    sed -i 's/bg=#30363d/bg=#ffffff/' $XDG_CONFIG_HOME/tmux/tmux.conf
    sed -i 's/foreground="#FFFFFF"/foreground="#1F2328"/' $XDG_CONFIG_HOME/starship.toml
    sed -i 's/background="#1F2328"/background="#FFFFFF"/' $XDG_CONFIG_HOME/starship.toml
    sed -i 's/yin/yang/' $XDG_CONFIG_HOME/vim/vimrc
  ;;
  dark)
    sed -i 's/github_light/github_dark/' $XDG_CONFIG_HOME/foot/foot.ini
    sed -i 's/fg=#1f2328/fg=#e6edf3/' $XDG_CONFIG_HOME/tmux/tmux.conf
    sed -i 's/bg=#ffffff/bg=#30363d/' $XDG_CONFIG_HOME/tmux/tmux.conf
    sed -i 's/foreground="#1F2328"/foreground="#FFFFFF"/' $XDG_CONFIG_HOME/starship.toml
    sed -i 's/background="#FFFFFF"/background="#1F2328"/' $XDG_CONFIG_HOME/starship.toml
    sed -i 's/yang/yin/' $XDG_CONFIG_HOME/vim/vimrc
  ;;
esac

emacsclient -e "(conf/switch-theme-to-os 'stimmung-themes-light 'stimmung-themes-dark)"
