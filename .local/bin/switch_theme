#!/usr/bin/env bash

case $1 in
  light)
    sed -i 's/Solarized (dark)/Solarized (light)/' $XDG_CONFIG_HOME/bat/config
    sed -i 's/tokyonight-night/tokyonight-day/' $XDG_CONFIG_HOME/foot/foot.ini
  ;;
  dark)
    sed -i 's/Solarized (light)/Solarized (dark)/' $XDG_CONFIG_HOME/bat/config
    sed -i 's/tokyonight-day/tokyonight-night/' $XDG_CONFIG_HOME/foot/foot.ini
  ;;
esac

emacsclient -e "(conf/switch-theme-to-os 'solarized-light 'solarized-dark)"
