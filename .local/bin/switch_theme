#!/usr/bin/env bash

case $1 in
  light)
    sed -i 's/Coldark-Dark/Coldark-Cold/' $XDG_CONFIG_HOME/bat/config
    sed -i 's/catppuccin-mocha/catppuccin-latte/' $XDG_CONFIG_HOME/foot/foot.ini
  ;;
  dark)
    sed -i 's/Coldark-Cold/Coldark-Dark/' $XDG_CONFIG_HOME/bat/config
    sed -i 's/catppuccin-latte/catppuccin-mocha/' $XDG_CONFIG_HOME/foot/foot.ini
  ;;
esac

toolbox run -c dev emacsclient -e "(conf/switch-theme-to-os 'ef-elea-light 'ef-elea-dark)"
