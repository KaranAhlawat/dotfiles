#!/usr/bin/env bash

case $1 in
  light)
    sed -i 's/Coldark-Dark/Coldark-Cold/' $XDG_CONFIG_HOME/bat/config
    sed -i 's/vivendi/operandi/' $XDG_CONFIG_HOME/foot/foot.ini
  ;;
  dark)
    sed -i 's/Coldark-Cold/Coldark-Dark/' $XDG_CONFIG_HOME/bat/config
    sed -i 's/operandi/vivendi/' $XDG_CONFIG_HOME/foot/foot.ini
  ;;
esac

toolbox run -c dev emacsclient -e "(conf/switch-theme-to-os 'ef-light 'catppuccin)"
