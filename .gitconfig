[user]
	name = Karan Ahlawat
	email = ahlawatkaran12@gmail.com

[init]
	defaultBranch = main

[core]
	pager = delta

[alias]
	co = checkout
	br = branch
	cm = commit
	st = status
	s = st -s
	l = log --oneline
	lg = log --graph

[core]
	editor = flatpak run re.sonny.Commit
	pager = delta
	excludesFiles = /home/karan/.gitignore

[interactive]
	diffFilter = delta --color-only --features=interactive

[include]
	path = "~/repos/catppuccin.gitconfig"

[delta]
	features = side-by-side diff-so-fancy line-numbers decorations catppuccin-mocha

[delta "interactive"]
	keep-plus-minus-markers = false

[diff]
	colorMoved = default

[credential "https://github.com"]
	helper = !/usr/bin/gh auth git-credential
[credential "https://gist.github.com"]
	helper = !/usr/bin/gh auth git-credential
	
[rerere]
	enabled = true

[merge]
	conflictStyle = diff3
